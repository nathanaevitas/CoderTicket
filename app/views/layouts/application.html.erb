<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item"> <%= link_to "Create Events", new_event_path, class: "nav-link" %></li>
        <li class="nav-item"> <%= link_to "Create Tickets", new_ticket_path, class: "nav-link" %></li>
        <li class="nav-item"> </li>
        <li class="nav-item"> <%= link_to "Unpublished Events",root_path(noticket: 'yes'), class: "nav-link" %></li>       

      <% else %>
        <li class="nav-item">
        <%= link_to "Sign Up", user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
      
    </ul>
  </nav> 
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %> 

<%= yield %>

</body>
</html>
