<div class='events-header' style='background-image: url(<%= header_background_image_url %>)'>
      <div class="container">
        <h2> Create New Venue </h2>    
      </div>
    </div>
    <div class = 'row'>
    	<div class='container'>
    		<div class ='col-md-10'>
    		<div class="container-fluid tickets-buy">   
		    <%= simple_form_for Venue.new, :url => venues_path, :method => :post do |t| %>
		      <%= t.error_notification %>

		      <div class="form-inputs">
		        <%= t.input :name, label: 'Venue Name', required: true %>
		       <%= t.input :full_address, label: 'Full Address', required: true %>
		               
		        <%= t.input :region do %>      
		          <%= t.select :region, Region.region_list.collect {|f| [f.name, f.id] }, label: "Region", include_blank: true%>
		        <% end %> 
		      <div <div class="row">
		          <div class="col-md-4 col-md-offset-3">
		            <%= t.button :submit, "Create Venue", class: "btn btn-success btn-lg btn-block"  %>
		            </div>
			        </div>
			    <% end %>
			  	</div>
			  </div>
	    	</div>
	    </div>
    </div>
    	
    
